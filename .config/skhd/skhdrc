# -- Changing Window Focus --

# change window focus within space
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - h : yabai -m window --focus west
alt - l : yabai -m window --focus east

shift + cmd - h : yabai -m window --resize left:-20:0 ; yabai -m window --resize right:-20:0
shift + cmd - j : yabai -m window --resize bottom:0:20 ; yabai -m window --resize top:0:20
shift + cmd - k : yabai -m window --resize top:0:-20 ; yabai -m window --resize bottom:0:-20
shift + cmd - l : yabai -m window --resize right:20:0 ; yabai -m window --resize left:20:0

shift + cmd - t : yabai -m window --toggle float --grid 4:4:1:1:2:2
